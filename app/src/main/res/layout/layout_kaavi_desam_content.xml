<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="70dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shortcut_logo"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="காவி தேசம்"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:typeface="serif"
        android:padding="6dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="நாம் மறந்த நமது கலாச்சாரத்தையும் மற்றும்  விலை மதிப்புமிக்க பொக்கிஷங்களான நமது கிரகங்களின் பயனை  தெரிந்து கொள்வது மட்டுமல்லாது அதை  வாழ்நாட்களிலும்  உபயோகித்து நாம் செய்யும் நற்செயல்கள் அனைத்தையும்  விரைவில் வெற்றியடைய  செய்வதே  நமது காவி தேசம் செயலியின் நோக்கமாகும். "
        android:textSize="14sp"
        android:textColor="@color/black"
        android:typeface="serif"
        android:padding="6dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="தினமும் நமது காவி தேசம் செயலியை உபயோகித்து வாழ்வில் நிலையான ஆரோக்கியத்தையும் அளவில்லா செல்வ செழிப்பையும் பெற பிரார்த்திக்கிறோம். "
        android:textSize="14sp"
        android:textColor="@color/black"
        android:typeface="serif"
        android:padding="6dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="உங்கள் உறவினர்  மற்றும்  நண்பர்களிடம் காவி தேசம் செயலியை கொண்டுபோய் சேர்க்குமாறு கேட்டுக்கொள்கிறோம்."
        android:textSize="14sp"
        android:typeface="serif"
        android:textColor="@color/black"
        android:padding="6dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="காவி தேசம் - என்றும் இறை பணியில்."
        android:textSize="14sp"
        android:textColor="@color/black"
        android:typeface="serif"
        android:padding="6dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="www.kaavidesam.com"
        android:textSize="14sp"
        android:autoLink="web"
        android:textColorLink="@color/black"
        android:textColor="@color/black"
        android:typeface="serif"
        android:padding="6dp"/>

</LinearLayout>
</ScrollView>